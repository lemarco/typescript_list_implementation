{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "build",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.symbol.wellknown",
      "es2015.promise",
      "es2015.symbol",
      "es2015.generator",
      "dom.iterable",
      "dom",
      "scripthost"
    ],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts", "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}